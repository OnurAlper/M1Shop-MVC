    <style type="text/css">
        #nav_cont {
            background-color: #87509c !important;
        }

        #btn_ekle {
            background-color: black !important;
            color: #ffffff !important;
        }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px; /* Vertically center the text there */
        }

        @@media screen and (max-width:500px),screen and (max-device-width:500px) {
            #btn_ilan {
                margin-bottom: 20px;
            }

            #nav_cont {
                width: 100%;
            }
        }

        @@media screen and (max-width:701px),screen and (max-width:991px) {
            #btn_ilan {
                margin-bottom: 20px;
                display: block;
            }

            .ml-auto {
                display: block !important;
                margin-top: 20px !important;
            }
    </style>

</head>



<body style="background: WhiteSmoke;">

    <div>
        <nav id="nav_cont" class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="navbar-header pull-left">
